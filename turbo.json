{
  "$schema": "./node_modules/turbo/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "**/tsconfig*.json",
    "**/vite.config.*",
    "**/postcss.config.*",
    "unocss.config.*"
  ],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build:desktop": {
      "dependsOn": ["@repo/config#build"],
      "outputs": ["dist/desktop/**"],
      "outputLogs": "full",
      "cache": false
    },
    "build:mobile": {
      "dependsOn": ["@repo/config#build"],
      "outputs": ["dist/**"],
      "outputLogs": "full",
      "cache": false
    },
    "dev": {
      "dependsOn": ["@repo/config#stub"],
      "outputs": [],
      "outputLogs": "full",
      "cache": false,
      "persistent": false
    },
    "stub": {
      "cache": true
    }
  }
}
