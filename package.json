{
  "name": "monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.8.1"
  },
  "scripts": {
    "reinstall": "pnpm clean --del-lock && pnpm install",
    "preinstall": "npx only-allow pnpm",
    "clean": "node ./scripts/clean.mjs",
    "update:deps": "npx taze -r -w major",

    "dev:desktop": "turbo run dev --filter=desktop",
    "dev:mobile": "turbo run dev --filter=mobile",
    "build:mobile": "turbo run build:mobile",
    "build:desktop": "turbo run build:desktop",
    "lint": "turbo run lint",
    "fix": "eslint --fix ."
  },
  "dependencies": {
    "@vueuse/core": "^13.1.0",
    "pinia": "^3.0.2",
    "postcss-preset-env": "^10.1.6",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/archiver": "catalog:",
    "@types/node": "catalog:",
    "@unocss/eslint-plugin": "catalog:",
    "@unocss/reset": "catalog:",
    "@vant/auto-import-resolver": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "archiver": "catalog:",
    "code-inspector-plugin": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unocss": "catalog:",
    "unplugin-auto-import": "catalog:",
    "unplugin-vue-components": "catalog:",
    "vite": "catalog:",
    "vite-plugin-compression": "catalog:",
    "vite-plugin-zip-pack": "catalog:",
    "vue-tsc": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "vue-demi"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
